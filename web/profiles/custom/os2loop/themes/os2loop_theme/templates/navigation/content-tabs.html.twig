{#
/**
 * Template for displaying tabs on content.
 *
 * Should only be used for on node templates.
 *
 * Available variables
 * - @see drupal/core/node/templates/node.html.twig
 * - id: the id to identify the tab menu.
 * - tabs: A list of tabs to display.
 */
#}
<div class="tabs nav btn-group mb-30" id="{{ id }}" role="tablist">
  {% for key, tab in tabs %}
  <a class="tab btn btn-primary {{ key == 0 ? 'active' }}" id="{{ tab.id }}-tab" aria-controls="{{ tab.id }}" data-toggle="tab" href="#{{ tab.id }}" >{{ tab.name }}</a>
  {% endfor %}
</div>
